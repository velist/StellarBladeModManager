<Window x:Class="UEModManager.Views.GamePathConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="确认游戏路径配置"
        Width="600" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="500"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF0088DD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="BrowseButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF303030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding GameName}" FontSize="20" FontWeight="Bold" 
                       Foreground="#FF00F2FE" Margin="0,0,0,10"/>
            <TextBlock Text="请确认以下路径配置是否正确，或手动修改：" FontSize="14" 
                       Foreground="#FFCCCCCC"/>
        </StackPanel>
        
        <!-- 路径配置 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- 游戏路径 -->
                <GroupBox Header="游戏安装路径" Foreground="White" BorderBrush="#FF404040" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="游戏主程序所在目录：" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding GamePath, UpdateSourceTrigger=PropertyChanged}" 
                                     Grid.Column="0"/>
                            <Button Content="浏览..." Grid.Column="1" 
                                    Style="{StaticResource BrowseButton}"
                                    Command="{Binding BrowseGamePathCommand}"/>
                        </Grid>
                        <TextBlock Text="{Binding GamePathStatus}" Margin="0,5,0,0" FontSize="12"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- MOD路径 -->
                <GroupBox Header="MOD安装路径" Foreground="White" BorderBrush="#FF404040" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="MOD文件将安装到此目录：" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding ModPath, UpdateSourceTrigger=PropertyChanged}" 
                                     Grid.Column="0"/>
                            <Button Content="浏览..." Grid.Column="1" 
                                    Style="{StaticResource BrowseButton}"
                                    Command="{Binding BrowseModPathCommand}"/>
                        </Grid>
                        <TextBlock Text="{Binding ModPathStatus}" Margin="0,5,0,0" FontSize="12"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 备份路径 -->
                <GroupBox Header="MOD备份路径" Foreground="White" BorderBrush="#FF404040" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="MOD备份文件将保存到此目录：" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding BackupPath, UpdateSourceTrigger=PropertyChanged}" 
                                     Grid.Column="0"/>
                            <Button Content="浏览..." Grid.Column="1" 
                                    Style="{StaticResource BrowseButton}"
                                    Command="{Binding BrowseBackupPathCommand}"/>
                        </Grid>
                        <TextBlock Text="{Binding BackupPathStatus}" Margin="0,5,0,0" FontSize="12"/>
                        <CheckBox Content="使用默认备份路径（推荐）" 
                                  IsChecked="{Binding UseDefaultBackupPath}"
                                  Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 高级选项 -->
                <GroupBox Header="高级选项" Foreground="White" BorderBrush="#FF404040">
                    <StackPanel Margin="10">
                        <CheckBox Content="启动游戏后自动扫描MOD目录" 
                                  IsChecked="{Binding AutoScanOnGameSwitch}"
                                  Foreground="White" Margin="0,5"/>
                        <CheckBox Content="自动备份导入的MOD文件" 
                                  IsChecked="{Binding AutoBackupMods}"
                                  Foreground="White" Margin="0,5"/>
                        <CheckBox Content="允许在子文件夹中查找MOD" 
                                  IsChecked="{Binding ScanSubfolders}"
                                  Foreground="White" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="取消" Width="80" Margin="0,0,10,0"
                    Background="#FF666666"
                    Command="{Binding CancelCommand}"/>
            <Button Content="确认" Width="80"
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
        
    </Grid>
</Window> 